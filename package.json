{
  "name": "soniditos-desktop",
  "version": "1.0.1",
  "description": "MÃºsica en streaming",
  "main": "src/main.js",
  "scripts": {
    "start": "electron ./src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "generate-icons": "electron-icon-maker --input=./src/assets/tray-icon.png --output=./build"
  },
  "keywords": [
    "music"
  ],
  "author": "virtuanista",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "discord-rpc": "^4.0.1",
    "electron-titlebar": "^0.0.3",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.soniditos.desktop",
    "productName": "Soniditos",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "./build/icons/win/icon.ico",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./build/icons/mac/icon.icns"
    },
    "linux": {
      "icon": "./build/icons/png/32x32.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "virtuanista",
        "repo": "https://github.com/soniditos",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "electron-icon-maker": "^0.0.5"
  }
}
